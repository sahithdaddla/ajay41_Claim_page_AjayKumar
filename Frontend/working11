    <script>
        let currentClaimType = '';
        let validationTimeout;

        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => section.classList.remove('active'));
            document.querySelectorAll('.nav-tab').forEach(tab => tab.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            document.querySelector(`.nav-tab[onclick="showSection('${sectionId}')"]`).classList.add('active');
            closeAllForms();
            if (sectionId !== 'request-claim') {
                document.getElementById('successMessage').classList.remove('show');
            }
            document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });

            if (sectionId === 'claim-history') {
                document.getElementById('historyEmpIdFormContainer').classList.add('active');
                document.getElementById('historyContent').style.display = 'none';
                const historyEmpId = document.getElementById('historyEmpId');
                const storedEmpId = sessionStorage.getItem('employeeId');
                if (storedEmpId) {
                    historyEmpId.value = storedEmpId;
                    validateHistoryEmpId();
                }
            }
        }

        function openClaimForm(claimType) {
            closeAllForms();
            document.getElementById('successMessage').classList.remove('show');
            currentClaimType = claimType.charAt(0).toUpperCase() + claimType.slice(1);
            document.getElementById('formTitle').textContent = `${currentClaimType} Claim Form`;
            document.getElementById('claimFormContainer').classList.add('active');
            document.getElementById('claimFormContainer').scrollIntoView({ behavior: 'smooth' });
        }

        function closeAllForms() {
            document.querySelectorAll('.form-container').forEach(form => form.classList.remove('active'));
            document.getElementById('claimForm').reset();
            document.getElementById('fileName').textContent = 'No files chosen';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function validateName() {
            const name = document.getElementById('empName').value;
            const nameRegex = /^[A-Za-z]+(?:\.[A-Za-z]+)*(?: [A-Za-z]+)*(?:\.[A-Za-z]+){0,3}$/;
            const consecutiveSpaces = /\s{2,}/;
            const leadingTrailingSpaces = /^\s+|\s+$/;
            const errorElement = document.getElementById('empNameError');
            
            if (!name) {
                errorElement.textContent = 'Name is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (leadingTrailingSpaces.test(name)) {
                errorElement.textContent = 'No leading or trailing spaces allowed';
                errorElement.classList.add('show');
                return false;
            }
            
            if (consecutiveSpaces.test(name)) {
                errorElement.textContent = 'No consecutive spaces allowed';
                errorElement.classList.add('show');
                return false;
            }
            
            if (!nameRegex.test(name)) {
                errorElement.textContent = 'Invalid name: Only letters, single spaces, and up to 3 dot-separated suffixes (e.g., John.M.Doe Smith.Jr)';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateEmail() {
            const emailInput = document.getElementById('empEmail').value;
            const hasSpaces = /\s/;
            const emailRegex = /^[a-zA-Z0-9](?:[a-zA-Z0-9]|(?![._-]{2})[._-]){2,}@astrolitetech\.com$/;
            const errorElement = document.getElementById('empEmailError');
            
            // Remove any spaces and update input
            const sanitizedEmail = emailInput.replace(/\s+/g, '');
            if (emailInput !== sanitizedEmail) {
                document.getElementById('empEmail').value = sanitizedEmail;
            }
            
            if (!sanitizedEmail) {
                errorElement.textContent = 'Email is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (hasSpaces.test(emailInput)) {
                errorElement.textContent = 'No spaces allowed in email';
                errorElement.classList.add('show');
                return false;
            }
            
            if (!emailRegex.test(sanitizedEmail)) {
                errorElement.textContent = 'Email must be in the format user@astrolitetech.com, min 3 chars before @, no consecutive _-.';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateEmpId() {
            const empId = document.getElementById('empId').value.trim();
            const empIdRegex = /^[ATS]{3}0(?!000)[0-9]{3}$/;
            const errorElement = document.getElementById('empIdError');
            
            if (!empId) {
                errorElement.textContent = 'Employee ID is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (!empIdRegex.test(empId)) {
                errorElement.textContent = 'Format: ATS0 followed by 3 digits (not all zeros)';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateHistoryEmpId() {
            const empId = document.getElementById('historyEmpId').value.trim();
            const empIdRegex = /^[ATS]{3}0(?!000)[0-9]{3}$/;
            const errorElement = document.getElementById('historyEmpIdError');
            
            if (!empId) {
                errorElement.textContent = 'Employee ID is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (!empIdRegex.test(empId)) {
                errorElement.textContent = 'Format: ATS0 followed by 3 digits (not all zeros)';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateDepartment() {
            const department = document.getElementById('department').value;
            const errorElement = document.getElementById('departmentError');
            
            if (!department) {
                errorElement.textContent = 'Department is required';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateClaimDate() {
            const claimDate = new Date(document.getElementById('claimDate').value);
            const today = new Date();
            const threeMonthsAgo = new Date();
            threeMonthsAgo.setMonth(today.getMonth() - 3);
            const errorElement = document.getElementById('claimDateError');
            
            if (!document.getElementById('claimDate').value) {
                errorElement.textContent = 'Date is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (claimDate > today) {
                errorElement.textContent = 'Date cannot be in the future';
                errorElement.classList.add('show');
                return false;
            }
            
            if (claimDate < threeMonthsAgo) {
                errorElement.textContent = 'Date cannot be older than 3 months';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateAmount() {
            const amount = parseFloat(document.getElementById('amount').value);
            const errorElement = document.getElementById('amountError');
            
            if (!document.getElementById('amount').value) {
                errorElement.textContent = 'Amount is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (isNaN(amount)) {
                errorElement.textContent = 'Must be a valid number';
                errorElement.classList.add('show');
                return false;
            }
            
            if (amount <= 0) {
                errorElement.textContent = 'Amount must be positive';
                errorElement.classList.add('show');
                return false;
            }
            
            if (amount > 50000) {
                errorElement.textContent = 'Amount cannot exceed ₹50,000';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateDescription() {
            const description = document.getElementById('description').value;
            const descRegex = /^[A-Za-z][A-Za-z0-9\s,.]*[A-Za-z0-9]$/;
            const consecutiveSpaces = /\s{2,}/;
            const leadingTrailingSpaces = /^\s+|\s+$/;
            const invalidConsecutive = /(,{2,}|\.{2,}|,\s,|\.\s\.|,\s\.|\.\s,)/;
            const errorElement = document.getElementById('descriptionError');
            
            if (!description) {
                errorElement.textContent = 'Description is required';
                errorElement.classList.add('show');
                return false;
            }
            
            if (leadingTrailingSpaces.test(description)) {
                errorElement.textContent = 'No leading or trailing spaces allowed';
                errorElement.classList.add('show');
                return false;
            }
            
            if (consecutiveSpaces.test(description)) {
                errorElement.textContent = 'No consecutive spaces allowed';
                errorElement.classList.add('show');
                return false;
            }
            
            if (description.length > 200) {
                errorElement.textContent = 'Description cannot exceed 200 characters';
                errorElement.classList.add('show');
                return false;
            }
            
            if (!descRegex.test(description)) {
                errorElement.textContent = 'Invalid description: Must start with a letter, end with a letter or number, only letters, numbers, spaces, commas, periods';
                errorElement.classList.add('show');
                return false;
            }
            
            if (invalidConsecutive.test(description)) {
                errorElement.textContent = 'No consecutive commas, periods, or invalid punctuation patterns';
                errorElement.classList.add('show');
                return false;
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        function validateDocuments() {
            const documents = document.getElementById('documents').files;
            const errorElement = document.getElementById('documentsError');
            
            if (documents.length === 0) {
                errorElement.textContent = 'At least one document is required';
                errorElement.classList.add('show');
                return false;
            }
            
            for (const file of documents) {
                const validTypes = ['application/pdf', 'image/jpeg', 'image/png'];
                if (!validTypes.includes(file.type)) {
                    errorElement.textContent = 'Only PDF, JPG, or PNG files allowed';
                    errorElement.classList.add('show');
                    return false;
                }
                if (file.size > 5 * 1024 * 1024) {
                    errorElement.textContent = 'Each file must be under 5MB';
                    errorElement.classList.add('show');
                    return false;
                }
            }
            
            errorElement.classList.remove('show');
            return true;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const inputs = [
                { id: 'empName', validator: validateName },
                { id: 'empEmail', validator: validateEmail },
                { id: 'empId', validator: validateEmpId },
                { id: 'amount', validator: validateAmount },
                { id: 'description', validator: validateDescription },
                { id: 'historyEmpId', validator: validateHistoryEmpId }
            ];

            inputs.forEach(({ id, validator }) => {
                const inputElement = document.getElementById(id);
                if (inputElement) {
                    inputElement.addEventListener('input', () => {
                        if (id === 'empEmail') {
                            validator();
                        } else {
                            clearTimeout(validationTimeout);
                            validationTimeout = setTimeout(validator, 500);
                        }
                    });
                }
            });

            // Prevent spaces in email input
            const emailInput = document.getElementById('empEmail');
            emailInput.addEventListener('keydown', function(e) {
                if (e.key === ' ' || e.key === 'Spacebar' || /\s/.test(e.key)) {
                    e.preventDefault();
                }
            });

            // Handle paste event to remove spaces
            emailInput.addEventListener('paste', function(e) {
                e.preventDefault();
                const pastedText = (e.clipboardData || window.clipboardData).getData('text');
                const sanitizedText = pastedText.replace(/\s+/g, '');
                document.execCommand('insertText', false, sanitizedText);
                validateEmail();
            });

            document.getElementById('department').addEventListener('change', validateDepartment);
            document.getElementById('claimDate').addEventListener('change', validateClaimDate);
            
            document.getElementById('documents').addEventListener('change', function(e) {
                const files = e.target.files;
                const fileNameDisplay = document.getElementById('fileName');
                if (files.length === 0) {
                    fileNameDisplay.textContent = 'No files chosen';
                } else if (files.length === 1) {
                    fileNameDisplay.textContent = files[0].name;
                } else {
                    fileNameDisplay.textContent = `${files.length} files selected`;
                }
                validateDocuments();
            });

            const today = new Date();
            const threeMonthsAgo = new Date();
            threeMonthsAgo.setMonth(today.getMonth() - 3);
            const dateInput = document.getElementById('claimDate');
            dateInput.max = formatDate(today);
            dateInput.min = formatDate(threeMonthsAgo);

            const empId = sessionStorage.getItem('employeeId');
            if (empId) {
                document.getElementById('empId').value = empId;
                validateEmpId();
            }

            showSection('request-claim');
        });

        function formatDate(date) {
            const d = new Date(date);
            let month = '' + (d.getMonth() + 1);
            let day = '' + d.getDate();
            const year = d.getFullYear();
            if (month.length < 2) month = '0' + month;
            if (day.length < 2) day = '0' + day;
            return [year, month, day].join('-');
        }

        function delay(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        async function submitForm() {
            const submitBtn = document.querySelector('#claimForm button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';

            const formData = new FormData();
            formData.append('empName', document.getElementById('empName').value.trim());
            formData.append('empEmail', document.getElementById('empEmail').value.trim());
            formData.append('empId', document.getElementById('empId').value.trim());
            formData.append('department', document.getElementById('department').value);
            formData.append('claimDate', document.getElementById('claimDate').value);
            formData.append('amount', parseFloat(document.getElementById('amount').value));
            formData.append('description', document.getElementById('description').value.trim());
            formData.append('type', currentClaimType);
            
            const documents = document.getElementById('documents').files;
            for (const file of documents) {
                formData.append('documents', file);
            }

            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000);

                const response = await fetch('http://44.223.23.145:3407/api/claims', {
                    method: 'POST',
                    body: formData,
                    signal: controller.signal,
                    headers: {
                        'Accept': 'application/json'
                    },
                    mode: 'cors'
                });

                clearTimeout(timeoutId);

                let result;
                try {
                    result = await response.json();
                } catch (jsonError) {
                    console.error('Error parsing JSON response:', jsonError, 'Status:', response.status);
                    alert(`Server returned invalid response: ${response.status} ${response.statusText}`);
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Submit Claim';
                    return;
                }

                if (response.status !== 201) {
                    console.error('Server error response:', result, 'Status:', response.status);
                    alert(`Server error: ${result.error || 'Failed to submit claim'}`);
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Submit Claim';
                    return;
                }

                const empId = document.getElementById('empId').value.trim();
                sessionStorage.setItem('employeeId', empId);
                
                document.getElementById('claimForm').reset();
                document.getElementById('fileName').textContent = 'No files chosen';
                closeAllForms();
                
                const successMessage = document.getElementById('successMessage');
                successMessage.classList.add('show');
                successMessage.scrollIntoView({ behavior: 'smooth' });
                
                await updateClaimHistory();
                
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Claim';
                
                await delay(5000);
                if (successMessage.classList.contains('show')) {
                    successMessage.classList.remove('show');
                    showSection('claim-history');
                }

            } catch (error) {
                console.error('POST fetch error:', error);
                
                try {
                    const empId = document.getElementById('empId').value.trim();
                    let claimsResponse = await fetch(`http://44.223.23.145:3407/api/claims`, {
                        headers: { 'Accept': 'application/json' },
                        mode: 'cors'
                    });
                    let claims = await claimsResponse.json();
                    if (!claimsResponse.ok || !Array.isArray(claims)) {
                        claimsResponse = await fetch(`http://44.223.23.145:3407/api/claims?employee_id=${empId}`, {
                            headers: { 'Accept': 'application/json' },
                            mode: 'cors'
                        });
                        claims = await claimsResponse.json();
                    }
                    if (claims.length > 0 && claims.some(claim => claim.employee_id === empId && new Date(claim.created_at) > new Date(Date.now() - 60000))) {
                        sessionStorage.setItem('employeeId', empId);
                        closeAllForms();
                        
                        const successMessage = document.getElementById('successMessage');
                        successMessage.classList.add('show');
                        successMessage.scrollIntoView({ behavior: 'smooth' });
                        
                        document.getElementById('claimForm').reset();
                        document.getElementById('fileName').textContent = 'No files chosen';
                        await updateClaimHistory();
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Submit Claim';
                        
                        await delay(5000);
                        if (successMessage.classList.contains('show')) {
                            successMessage.classList.remove('show');
                            showSection('claim-history');
                        }
                        return;
                    }
                } catch (fallbackError) {
                    console.error('Fallback check failed:', fallbackError);
                }

                if (error.name === 'AbortError') {
                    alert('Error submitting claim: Request timed out. Try smaller files or check server.');
                } else if (error.message.includes('Failed to fetch')) {
                    alert('Error submitting claim: Unable to connect to server. Check network or server status.');
                } else {
                    alert('Error submitting claim: ' + error.message);
                }
                
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Claim';
            }
        }

        function confirmSubmit() {
            closeModal('confirmModal');
            submitForm();
        }

        function cancelSubmit() {
            closeModal('confirmModal');
        }

        document.getElementById('claimForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const validations = [
                validateName(),
                validateEmail(),
                validateEmpId(),
                validateDepartment(),
                validateClaimDate(),
                validateAmount(),
                validateDescription(),
                validateDocuments()
            ];

            if (validations.every(valid => valid)) {
                document.getElementById('confirmModal').style.display = 'flex';
            } else {
                alert('Please correct the form errors before submitting.');
            }
        });

        async function fetchClaimHistory() {
            if (!validateHistoryEmpId()) {
                alert('Please enter a valid Employee ID.');
                return;
            }

            const empId = document.getElementById('historyEmpId').value.trim();
            sessionStorage.setItem('employeeId', empId);
            await updateClaimHistory(empId);
            document.getElementById('historyEmpIdFormContainer').classList.remove('active');
            document.getElementById('historyContent').style.display = 'block';
        }

        async function updateClaimHistory(empId) {
            const tableBody = document.querySelector('#historyTable tbody');
            const noHistory = document.getElementById('noHistory');

            if (!tableBody || !noHistory) {
                console.error('History table or noHistory element not found');
                return;
            }

            tableBody.innerHTML = '';
            noHistory.style.display = 'none';

            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000);
                
                const response = await fetch(`http://44.223.23.145:3407/api/claims?employee_id=${empId}`, {
                    signal: controller.signal,
                    headers: { 'Accept': 'application/json' },
                    mode: 'cors'
                });
                
                clearTimeout(timeoutId);

                let claims;
                try {
                    claims = await response.json();
                } catch (jsonError) {
                    console.error('Error parsing JSON response:', jsonError, 'Status:', response.status);
                    throw new Error(`Invalid server response: ${response.status} ${response.statusText}`);
                }

                if (!response.ok) {
                    throw new Error(`${claims.error || 'Server error'}`);
                }

                if (!Array.isArray(claims) || claims.length === 0) {
                    noHistory.style.display = 'block';
                } else {
                    claims.forEach(claim => {
                        const truncate = (str, max = 20) => str.length > max ? str.slice(0, max) + '...' : str;
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td title="${claim.claim_id}">${truncate(claim.claim_id)}</td>
                            <td title="${claim.employee_id}">${truncate(claim.employee_id)}</td>
                            <td title="${claim.employee_name}">${truncate(claim.employee_name)}</td>
                            <td title="${claim.type}">${truncate(claim.type)}</td>
                            <td title="${new Date(claim.claim_date).toLocaleDateString()}">${truncate(new Date(claim.claim_date).toLocaleDateString())}</td>
                            <td title="₹${claim.amount.toLocaleString()}">₹${truncate(claim.amount.toLocaleString())}</td>
                            <td><span class="status status-${claim.status}">${truncate(claim.status.charAt(0).toUpperCase() + claim.status.slice(1), 10)}</span></td>
                            <td><a href="#" class="view-details" onclick="viewClaim('${claim.claim_id}')">View</a></td>
                        `;
                        tableBody.appendChild(row);
                    });
                }
            } catch (error) {
                console.error('Error fetching claim history:', error.message);
                noHistory.style.display = 'block';
            }
        }

        async function viewClaim(claimId) {
            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 30000);
                
                const [claimResponse, documentsResponse] = await Promise.all([
                    fetch(`http://44.223.23.145:3407/api/claims?claim_id=${claimId}`, { 
                        signal: controller.signal, 
                        headers: { 'Accept': 'application/json' }, 
                        mode: 'cors' 
                    }),
                    fetch(`http://44.223.23.145:3407/api/claims/${claimId}/documents`, { 
                        signal: controller.signal, 
                        headers: { 'Accept': 'application/json' }, 
                        mode: 'cors' 
                    })
                ]);
                
                clearTimeout(timeoutId);

                let claims, documents;
                try {
                    claims = await claimResponse.json();
                    documents = await documentsResponse.json();
                } catch (jsonError) {
                    console.error('Error parsing JSON response:', jsonError);
                    alert('Server returned invalid response for claim details');
                    return;
                }

                if (!claimResponse.ok) {
                    console.error('Claim fetch error:', claims, 'Status:', claimResponse.status);
                    alert(`Error fetching claim details: ${claims.error || 'Server error'}`);
                    return;
                }

                if (!documentsResponse.ok) {
                    console.error('Documents fetch error:', documents, 'Status:', documentsResponse.status);
                    alert(`Error fetching claim documents: ${documents.error || 'Server error'}`);
                    return;
                }

                const claim = claims[0];
                if (!claim) {
                    alert('Claim not found');
                    return;
                }

                const detailsDiv = document.getElementById('claimDetails');
                detailsDiv.innerHTML = `
                    <p><strong>Claim ID:</strong> ${claim.claim_id}</p>
                    <p><strong>Type:</strong> ${claim.type}</p>
                    <p><strong>Employee:</strong> ${claim.employee_name}</p>
                    <p><strong>Email:</strong> ${claim.employee_email}</p>
                    <p><strong>Employee ID:</strong> ${claim.employee_id}</p>
                    <p><strong>Department:</strong> ${claim.department}</p>
                    <p><strong>Date:</strong> ${new Date(claim.claim_date).toLocaleDateString()}</p>
                    <p><strong>Amount:</strong> ₹${claim.amount.toLocaleString()}</p>
                    <p><strong>Description:</strong> ${claim.description}</p>
                    <p><strong>Status:</strong> ${claim.status.charAt(0).toUpperCase() + claim.status.slice(1)}</p>
                    <p><strong>Documents:</strong></p>
                    ${documents.map(doc => `<p><a href="${doc.file_path}" target="_blank">${doc.file_name}</a></p>`).join('')}
                `;

                document.getElementById('detailsModal').style.display = 'flex';
            } catch (error) {
                console.error('Error fetching claim details:', error.message);
                alert('Error fetching claim details: ' + error.message);
            }
        }
    </script>
</body>
</html>
